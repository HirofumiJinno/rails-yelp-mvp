<h1>Restaurants</h1>
<div>
  <ul>
    <% @restaurants.each do |restaurant| %>
        <div>
          <%= link_to restaurant_path(restaurant) do %>
            <li><%= restaurant.name.capitalize %></li>
          <% end %>
        </div>
    <% end %>
  </ul>
</div>
<div>
  <h2><%= link_to "Add a restaurant?", new_restaurant_path %>
  </h2>
</div>
