<h1><%= @restaurant.name.capitalize %></h1>
<h2>Addres: <%= @restaurant.address.capitalize %></h2>
<h2>Cuisine: <%= @restaurant.category.capitalize %></h2>
<h2>Phone number: <%= @restaurant.phone_number %></h2>
<h2><strong>Reviews</strong></h2>
<% @restaurant.reviews.each do |review| %>
  <div class="card-product">
    <%= image_tag "http://source.unsplash.com/featured/?#{@restaurant.category}&#{rand(1000)}"%>
    <div class="card-product-infos">
      <h2>Rating:<%= review.rating %></h2>
      <p>Comment: <%= review.content %></p>
    </div>
  </div>
<% end %>
<div>
  <h4>
  <%= link_to "Home", restaurants_path %>
  </h4>
</div>
<div>
   <h3><%= link_to "Leave a review", new_restaurant_review_path(@restaurant) %></h3>
</div>
